# Backend Environment Variables
# Copy this file to backend/.env and update with your values

# MongoDB Connection
# Local MongoDB:
MONGO_URI=mongodb://localhost:27017/careerpath

# OR MongoDB Atlas (replace with your connection string):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/careerpath?retryWrites=true&w=majority

# JWT Secret (generate a random string)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_use_random_string

# Server Port
PORT=5000

# Node Environment
NODE_ENV=development
